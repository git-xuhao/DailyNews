<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/news_card_view_style"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_news_summary_picture"
            android:layout_width="108dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/item_margin"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            tools:targetApi="lollipop"/>

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_news_summary_picture"
            android:text="测试测是是否手动阀"
            android:ellipsize="end"
            android:layout_margin="@dimen/item_margin"
            android:textColor="@color/day_one_text_color"
            android:maxLines="2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_author_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_news_summary_picture"
            android:src="@mipmap/iv_news_author_mark"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            tools:targetApi="lollipop"
            >
        </ImageView>

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_author_mark"
            android:layout_alignBottom="@id/iv_news_summary_picture"
            android:text="环球网"
            android:textSize="12sp"
            android:layout_margin="@dimen/item_margin">
        </TextView>

        <TextView
            android:id="@+id/tv_update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_author_name"
            android:layout_alignBottom="@id/iv_news_summary_picture"
            android:layout_margin="@dimen/item_margin"
            android:textSize="12sp"
            android:text="2017-02-21 10:58" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

